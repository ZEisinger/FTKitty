<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="umd.cmsc.feedthekitty.MainActivity$EventViewFragment" >

    <TextView
        android:id="@+id/event_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_name_text_size_large" />

    <TextView
        android:id="@+id/event_txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_txt_name"
        android:textSize="@dimen/event_name_text_size" />

    <ListView
        android:id="@+id/twitter_list_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/event_txt_desc"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_event_view_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter_list_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="@string/btn_event_text_donate"
        bootstrap:bb_icon_left="fa-money"
        bootstrap:bb_type="success" >
    </com.beardedhen.androidbootstrap.BootstrapButton>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_event_view_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_event_view_donate"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="@string/btn_post_twitter"
        bootstrap:bb_icon_left="fa-twitter"
        bootstrap:bb_type="primary" >
    </com.beardedhen.androidbootstrap.BootstrapButton>

</RelativeLayout>